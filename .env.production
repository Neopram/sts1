# STS Clearance Hub - Production Environment Configuration
# ========================================================
# Do NOT commit sensitive values to version control
# Use environment variables or secrets management system

# ============ DATABASE ============
DB_USER=sts_prod_user
DB_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD_HERE
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sts_clearance_production

# PostgreSQL Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============ REDIS CACHE ============
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ============ API CONFIGURATION ============
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============ SECURITY ============
SECRET_KEY=CHANGE_ME_WITH_STRONG_RANDOM_SECRET_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# ============ CORS ============
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============ FRONTEND ============
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://api.yourdomain.com

# ============ EMAIL CONFIGURATION ============
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@stsclearance.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM_EMAIL=STS Clearance <noreply@stsclearance.com>
SMTP_FROM_NAME=STS Clearance

# ============ MONITORING & OBSERVABILITY ============
SENTRY_DSN=https://CHANGE_ME_SENTRY_DSN
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============ LOGGING ============
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/app/logs/sts-clearance.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=10

# ============ PERFORMANCE TUNING ============
# Request timeout in seconds
REQUEST_TIMEOUT=30

# Max file upload size in MB
MAX_UPLOAD_SIZE=100

# Cache TTL in seconds
CACHE_TTL_SHORT=300        # 5 minutes
CACHE_TTL_MEDIUM=3600      # 1 hour
CACHE_TTL_LONG=86400       # 1 day

# ============ SECURITY FEATURES ============
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Session timeout in minutes
SESSION_TIMEOUT=30

# Password requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ============ FEATURE FLAGS ============
FEATURE_2FA_ENABLED=true
FEATURE_AUDIT_LOGGING_ENABLED=true
FEATURE_ADVANCED_FILTERING_ENABLED=true
FEATURE_EXPORT_PDF_ENABLED=true
FEATURE_EXPORT_EXCEL_ENABLED=true

# ============ BACKUP & DISASTER RECOVERY ============
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=/backups

# ============ GRAFANA ============
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GRAFANA_ADMIN_USER=admin

# ============ SSL/TLS CERTIFICATES ============
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============ DEPLOYMENT ============
DEPLOYMENT_ENVIRONMENT=production
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_IMAGE_TAG=latest
