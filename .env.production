# STS Clearance Hub - Production Environment Configuration

# API Configuration
REACT_APP_API_URL=https://api.stsclearancehub.com
VITE_API_URL=https://api.stsclearancehub.com

# Application Settings
REACT_APP_APP_NAME=STS Clearance Hub
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=*

# Features
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_AUTO_REFRESH_INTERVAL=30000
REACT_APP_ENABLE_NOTIFICATIONS=true

# Language Settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_AVAILABLE_LANGUAGES=en,es,pt

# Security
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000

# Performance
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_ENABLE_CACHING=true
REACT_APP_BUNDLE_ANALYZER=false